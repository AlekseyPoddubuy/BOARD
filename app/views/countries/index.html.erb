<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= render "components/admin-left" %>
    </div>
    <div class="col-lg-9">
      <p id="notice"><%= notice %></p>
      <div class="trigger">
        <h1>Страны для вакансий <%= link_to 'Добавить категорию', new_country_path, class: 'btn btn-primary' %></h1> 
      </div>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>Название категории</th>
            <th>URL категории</th>
            <th>Функции:</th>
          </tr>
        </thead>
        <tbody>
        <% @countries.each do |country| %>
          <tr>
            <td><%= country.title %></td>
            <td><%= country.slug %></td>
            <td><%= link_to 'Показать', country %> <%= link_to 'Редактировать', edit_country_path(country) %> <%= link_to 'Удалить', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<p id="notice"><%= notice %></p>

<h1>Countries</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Description</th>
      <th>Slug</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @countries.each do |country| %>
    <tr>
      <td><%= country.title %></td>
      <td><%= country.body %></td>
      <td><%= country.description %></td>
      <td><%= country.slug %></td>
      <td><%= link_to 'Show', country %></td>
      <td><%= link_to 'Edit', edit_country_path(country) %></td>
      <td><%= link_to 'Destroy', country, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Country', new_country_path %>
