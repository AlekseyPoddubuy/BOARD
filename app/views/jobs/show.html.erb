      <tbody>

      	<% @posts.each do |post| %>



      	<% if post.old == 1 %>

      	<tr class="red">
      		<% else %>
      		<tr>

      			<% end %>

      			<td>
      				<% if post.job_id == nil %>
      				Не указано
      				<% else %>
      				<%= link_to post.job.title, job_path(post.job_id), title: 'Вакансия в архиве' %>
      				<% end %>



      			</td>
      			<td>

      				<% if post.old == 1 %>

      				<%= link_to truncate(post.title, length: 62), '#', title: 'Вакансия в архиве' %></td>

      				<% else %>

      				<%= link_to truncate(post.title, length: 62), post %></td>

      				<% end %>


      				<td>
      					<%= link_to post.country.title, country_path(post.country_id) %>
      				</td>


<!--
              <td><%# post.category_id && post.category.title %></td>
          -->
          <td>
          	<% if post.payment == nil %>
          	Неуказано
          	<% else %>
          	<%= post.payment %>
          	<% end %>       
          </td>
          <td class="stars">

          	<% if post.st == "5" %>
          	<i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i>

          	<% elsif  post.st == "4"  %>


          	<i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i>

          	<% elsif  post.st == "3"  %>


          	<i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i> <i class="fa fa-star" aria-hidden="true"></i>
          	<% else %>



          	<% if post.old == 1 %>

          	В архиве</td>

          	<% else %>


          	<%= post.datetime.strftime("%d.%m.%Y") %>

          	<% end %>






          	<% end %>


          </td>

          <% end %>
      </tr>


  </tbody>
</table>
<div class="container pagination justify-content-center" >
	<%= paginate @posts %>
</div>
</div>
