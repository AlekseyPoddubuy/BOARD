<div class="post-header">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <h1><%= image_tag "esw.png" %> <%= @post.title %></h1>
        <ul>
          <li class="type"><i class="fa fa-battery-full" aria-hidden="true"></i> Постоянная работа</li>
          <li><i class="fa fa-pie-chart" aria-hidden="true"></i> <%= @post.category.title %></li>
          <li><i class="fa fa-location-arrow" aria-hidden="true"></i> Австрия</li>
          <li><i class="fa fa-calendar" aria-hidden="true"></i> 21.12.2019</li>
        </ul>
      </div>
      <div class="col-lg-12">
        <div class="social">
          <p>Социальный профиль компании:
            <%  if @post.site == "" %>

            <% else %> 
            <a href="<%= @post.site %>"><i class="fa fa-external-link" aria-hidden="true"></i>
              Веб-сайт</a> /
              <% end %> 
              <a href="#"><i class="fa fa-twitter" aria-hidden="true"></i> Twitter</a> / <a href="#"><i class="fa fa-facebook" aria-hidden="true"></i>
              Facebook</a> / 
              <a href="#"><i class="fa fa-linkedin-square" aria-hidden="true"></i>
                LinkedIn</a></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="post-desc">
        <div class="container">
          <div class="row">
            <div class="col-lg-12">
              <p class="detail">Детально о вакансии - <strong><%= @post.title %></strong></p>
              <p>
                <%= @post.description %>
              </p> 
            </div>
          </div>
        </div>
      </div>



