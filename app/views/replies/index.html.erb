<div class="container">
	<div class="row">
		<div class="col-lg-3">
			<%= render "components/admin-left" %>
		</div>
		<div class="col-lg-9">
			<p id="notice"><%= notice %></p>
			<div class="trigger">
				<h1>Список всех ответов</h1> 
			</div>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Название категории</th>
						<th>Функции:</th>
					</tr>
				</thead>
				<tbody>
					<% @replies.each do |reply| %>
					<tr>
						<td><%= link_to reply.reply, [reply.topic] %></td>
						<td>
							<%= link_to [reply.topic, reply], method: :delete, data: { confirm: 'Are you sure?' } do %> Удалить комментарий<% end %> 
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>
</div>