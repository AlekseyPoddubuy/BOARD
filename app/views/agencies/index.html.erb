<div class="agencies">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="trigger">
          <h1>Всеукраинский рейтинг фирм по трудоустройству</h1>
        </div>
      </div>
      <div class="col-lg-12">
        <div class="gold-top">

        </div>
      </div>

      <% @agencies.each do |agency| %>

      <div class="col-lg-3">
        <% if agency.rate < 10 %>
        <div class="agency-top">
          <%= image_tag "crown.png", class: "agn-crown"  %>
          <% else %>          
          <div class="agency">
            <% end %>
            <%= image_tag "stars.png", class: 'agn-logo' %>
            <p class="agn-description"><%= agency.description %></p>
            <p class="agn-title"><%= agency.title %></p>
            <%= link_to "Детальней", agency, class: 'btn btn-warning' %>
          </div>
        </div>
        <% end %>
      </div>
    </div>
  </div>
