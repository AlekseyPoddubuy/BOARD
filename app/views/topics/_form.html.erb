<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :content %>
  </div>


<%= f.input_field :theme_id, collection: @themes.map { |t| [t.theme, t.id] }, promt: "Select" %>
  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
